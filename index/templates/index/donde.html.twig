{% extends "base.html.twig" %}

{% block title %}{{ "donde.title"|trans }}{% endblock %}
{% block og_title %}{{ "donde.og_title"|trans }}{% endblock %}
{% block og_description %}{{ "donde.og_description"|trans }}{% endblock %}
{% block meta_description %}{{ "donde.meta_description"|trans }}{% endblock %}
{% block meta_keywords %}{{ "donde.meta_keywords"|trans }}{% endblock %}

{% block body %}

<div class="page-title page-title-contacts bg-pattern" data-bgcolor="595a5a">
    <div class="page-title-overlay">
        <div class="container">
            <h1>{{ "donde.title"|trans }}</h1>
        </div>
    </div>
</div>
<div class="breadcrumbs">
    <div class="container">
        <div class="row">
            <ol class="breadcrumb">
                <li class="breadcrumb-home"><a href="{{ path('homepage') }}"><i class="fa fa-home"></i></a></li>
                <li class="active">{{ "donde.title"|trans }}</li>
            </ol>
        </div>
    </div>
</div>
<div class="map" id="map">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d374.0814234980821!2d2.1483666130356287!3d41.40337659404272!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x679ffd40d4873d99!2sCl%C3%ADnica+Dental+Oralit%C3%A1-+odontolog%C3%ADa+y+medicina+oral!5e0!3m2!1sfr!2ses!4v1521653004887" frameborder="0" style="border:0; width: 100%; height: 100%" allowfullscreen></iframe>
</div>
<div class="map-info-container">
    <div class="map-info" id="map-info">
        <div class="map-info-contacts">
            <div class="map-info-phone"> <i class="fa fa-phone"></i>
                <span>{{ "global.phone"|trans }}</span>
            </div>
            <div class="map-info-mail"> <i class="fa fa-envelope"></i>
                <span>
                    <a href="#bookform1" class="fancybox-2">
                        {{ "global.email"|trans }}
                    </a>
                </span>
            </div>
            <div class="map-info-location"> <i class="flaticon-navigation-arrow"></i>
                {{ "donde.address"|trans|raw }}
            </div>
        </div>
        <div class="map-info-socials"> <a href="#"><i class="fa fa-facebook"></i></a></div>
    </div>
</div>
<div class="get">
    <div class="container">
        <div class="row">
            <h2 class="section-title">{{ "donde.how_to_come"|trans }}</h2>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 get-item">
                <div class="get-item-icon"> <i class="fa fa-subway"></i> </div>
                <h4 class="get-item-title">{{ "donde.item_1.title"|trans }}</h4>
                <p class="get-item-text">
                    {{ "donde.item_1.text"|trans }}
                </p>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 get-item">
                <div class="get-item-icon"> <i class="fa fa-train"></i> </div>
                <h4 class="get-item-title">{{ "donde.item_2.title"|trans }}</h4>
                <p class="get-item-text">{{ "donde.item_2.text"|trans }}</p>
            </div>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12 get-item">
                <div class="get-item-icon"> <i class="fa fa-bus"></i> </div>
                <h4 class="get-item-title">{{ "donde.item_3.title"|trans }}</h4>
                <p class="get-item-text">{{ "donde.item_3.text"|trans }}</p>
            </div>
        </div>
    </div>
</div>
    <div class="make" style="background: #addcf2">
    <div class="container">
    <div class="row">
        <div class="col-lg-offset-2 col-lg-8 col-md-8 col-sm-12 col-xs-12">
        {% include "includes/cita.html.twig" %}
        </div>
    </div>
    </div>
    </div>
{% endblock %}